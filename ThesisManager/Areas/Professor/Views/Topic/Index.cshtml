@model TopicListVM
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Topic List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <a class="btn btn-primary" asp-area="Professor" asp-controller="Topic" asp-action="Create">Create Topic</a>
                </ol>
            </div>

        </div>
    </div>

</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <form asp-controller="Topic" asp-action="FilterTopics" method="get" class="row">

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="category">Category:</label>
                                    <select id="category" name="category" class="select2" style="width: 100%;">
                                        <option value="">All</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category">@category</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="status">Status:</label>
                                    <select id="status" name="status" class="select2" style="width: 100%;">
                                        <option value="">All</option>
                                        <option value="Available">Available</option>
                                        <option value="Taken">Taken</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="category"></label>
                                <div class="form-group">
                                    <button type="submit" id="applyFilters" class="btn btn-lg btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>


                        </form>

                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">


                            <thead>
                                <tr>

                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Category</th>
                                    <th>Created Time</th>

                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var topic in Model.Topics)
                                {
                                    <tr>
                                        <td>
                                            <a asp-area="Professor" asp-controller="Topic" asp-action="Details" asp-route-id="@topic.Id">
                                                @topic.Title
                                            </a>
                                        </td>
                                        @*  <td>@Html.Raw(@topic.Description)</td> *@
                                        <td>@topic.Author?.FirstName @topic.Author.LastName</td>
                                        <td>
                                            @foreach (var category in topic.Categories)
                                            {

                                                <span class="badge badge-success">
                                                    @category.Name
                                                </span>
                                            }
                                        </td>
                                        <td>@topic.CreatedTime.ToString("MM/dd/yyyy")</td>

                                        <td>
                                            @if (topic.TStatus == 0)
                                            {
                                                <span class="badge badge-success">
                                                    @topic.TStatus
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">
                                                    @topic.TStatus
                                                </span>
                                            }
                                        </td>
                                        <td class="project-actions text-right">
                                            @*  <a class="btn btn-primary btn-sm" asp-area="Professor" asp-controller="Topic" asp-action="Details" asp-route-id="@topic.Id">

                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                        </a> *@
                                            <a class="btn btn-info btn-sm" asp-area="Professor" asp-controller="Topic" asp-action="Update" asp-route-id="@topic.Id">

                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </a>
                                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('@topic.Id')"><i class="fas fa-trash"></i>Delete</button>

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function confirmDelete(topicId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to delete this topic?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, keep it'
            }).then((result) => {
                if (result.isConfirmed) {

                    window.location.href = '/Professor/Topic/Delete?topicId=' + topicId;
                } else {
                    // User cancelled the deletion, show a toastr notification
                    toastr.info('Topic deletion was cancelled');
                }
            });
        }
    </script>
    <script>
        // Set the check status of the Category, and Status drop - down menus.
        window.onload = function () {
           
            const urlParams = new URLSearchParams(window.location.search);

            const categoryParam = urlParams.get('category');
            //const professorParam = urlParams.get('professorName');
            const statusParam = urlParams.get('status');

            document.getElementById('category').value = categoryParam;
            //document.getElementById('professorName').value = professorParam;
            document.getElementById('status').value = statusParam;
        }
    </script>

    <script>
        $(document).ready(function () {
            var table = new DataTable('#example1', {
                layout: {
                    // topStart: {
                    //     buttons: ['copy', 'csv', 'excel', 'pdf', 'print', 'colvis']
                    // }
                }
            });

        });

    </script>

    <script>
        $(function () {
            $('.select2').select2()
        });
    </script>
}
