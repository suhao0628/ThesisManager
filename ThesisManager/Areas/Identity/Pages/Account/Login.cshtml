@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    .login-box {
        margin: auto;
        width: 30%;
    }
</style>
<div class="login-box">
    <div class="login-logo">
        <a href=""><b>TMS</b></a>
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form method="post" id="account">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Email" class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>


                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Password" class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <label asp-for="Input.RememberMe">
                                <input type="checkbox" id="remember" asp-for="Input.RememberMe" />

                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </div>



            </form>

            @* <div class="social-auth-links text-center mb-3">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
            </a>
            <a href="#" class="btn btn-block btn-danger">
            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
            </a>
            </div>  *@

            <p class="mb-1">
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p class="mb-0">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </div>
</div>
